<!DOCTYPE html>
<html lang="en">
   <%- include('../../partials/admin/head.ejs')%>
<body>
   <%- include('../../partials/admin/header.ejs')%>
   <section id="mid">
      <div class="container">
         <div class="row">
            <%- include('../../partials/admin/left.ejs')%>

            <div class="col-md-9">
               
              <h2 class="text-center">All blogs</h2>
              <%if(message!='jj'){%>
               <p class="alert alert-success"><%=message%></p>
            <%}%>
            <table class="table">
               <tr>
                   <th>Total blogs:<%=tdata%></th>
                   <th>Total Published:<%=tpublished%></th>
                   <th>Total Unpublished:<%=tunpublished%></th>
               </tr>
              <table class="table table-hover">
               <tr>
                  <th>S.No</th>
                 <th>Blog Title</th>
                 <th>Blog Img</th>
                 <th>Blog Description</th>
                 <th>Blog User</th>
                 <th>Blog Posteddate</th>
                 <th>Blog Status</th>
               </tr>
               <%data.forEach((value,key)=>{%>
                  <tr>
                     <td><%=key+1%></td>
                     <td><%=value.title%></td>
                     <td><img  style="width: 100px;" src="/uploads/<%=value.img%>" alt=""></td>
                     <td><%=value.desc%></td>
                     <td><%=value.user%></td>
                     <td><%=value.postedDate%></td>
                     <%if(value.status=='unpublished'){%>
                        <td><a href="/admin/updateallblog/<%=value.id%>/<%=value.status%>"><button class="btn btn-danger"><%=value.status%></button></a></td>

                        <%}else{%>
                            <td><a href="/admin/updateallblog/<%=value.id%>/<%=value.status%>"><button class="btn btn-success"><%=value.status%></button></a></td>
                         <%}%>
                  </tr>
               <%})%>
               

              </table>
            </div>
         </div>
      </div>
   </section>
  
    
   
    
</body>
</html> 